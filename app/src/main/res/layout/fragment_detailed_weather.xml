<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.garypierre_louis.weatherforecast.fragments.DetailedWeatherFragment"
    android:background="@color/background_floating_material_light"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/evolutionTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matinLabel"
                android:padding="20dp"
                android:text="@string/matinLabel"
                android:textSize="@dimen/fontSizeNormal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/matin"
                android:padding="20dp"
                android:textColor="@color/main_color"
                android:textSize="@dimen/fontSizeNormal"


                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/midiLabel"
                android:padding="20dp"
                android:text="@string/midiLabel"
                android:textSize="@dimen/fontSizeNormal"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/midi"
                android:padding="20dp"
                android:textColor="@color/main_color"
                android:textSize="@dimen/fontSizeNormal"


                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/soirLabel"
                android:padding="20dp"
                android:layout_alignParentRight="true"
                android:text="@string/soirLabel"
                android:textSize="@dimen/fontSizeNormal"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/soir"
                android:padding="20dp"
                android:textColor="@color/main_color"
                android:textSize="@dimen/fontSizeNormal"

                />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/temps"
        android:layout_below="@id/evolutionTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main"
            android:padding="20dp"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/fontSizeNormal"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:padding="20dp"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/fontSizeNormal"

            />




    </RelativeLayout>


</LinearLayout>
